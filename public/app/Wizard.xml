<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field">

    <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false"/>

    <div class="container">
        <div class="row">
            <form class="span12 form-horizontal">
                <fieldset>
                    <legend>{i18n.t('step1.title')}</legend>
                </fieldset>

                <ui:Field label="Mode">
                    <select items="{configuration.modes}"
                            selectedItem="{{configuration.wan}}"
                            itemKey="mode">
                        <js:Template name="item">
                            <option>{i18n.ts('wanModes',mode.type)}</option>
                        </js:Template>

                    </select>
                </ui:Field>

                <div class="static" visible="{isWanConfigurationActive('static')}">
                    <field:Text value="{{configuration.wan.ipAddress}}" label="IP" />
                    <field:Text value="{{configuration.wan.netmask}}" label="Netmask" />
                    <field:Text value="{{configuration.wan.gateway}}" label="Gateway" />
                </div>

                <div class="pppoe" visible="{isWanConfigurationActive('pppoe')}">
                    <field:Text value="{{configuration.wan.username}}" label="PPPoE Username" />
                    <field:Password value="{{configuration.wan.password}}" label="PPPoE Password" />
                </div>

                <ui:Field label="Mac Address">
                    <ui:RadioGroup cid="overwriteMacAddress" value="false">
                        <ui:Radio label="Use Default" value="false"/>
                        <ui:Radio label="Overwrite" value="true"/>
                    </ui:RadioGroup>
                        <input value="{{configuration.wan.macAddress}}"
                               enabled="{overwriteMacAddress.value}"/>

                </ui:Field>

                <ui:Field label="Dns Server" visible="{configuration.wan.supportsDnsServerByDhcp()}">
                    <ui:Checkbox checked="{{configuration.wan.useDnsServer}}"/>

                </ui:Field>

                <div visible="{configuration.wan.useDnsServer}">
                    <field:Text value="{{configuration.wan.DnsServer1}}" label="Dns Server 1" />
                    <field:Text value="{{configuration.wan.DnsServer2}}" label="Dns Server 2" />
                    <field:Text value="{{configuration.wan.DnsServer3}}" label="Dns Server 3" />
                </div>
            </form>
         </div>
    </div>
</app:WizardClass>