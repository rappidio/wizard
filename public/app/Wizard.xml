<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field" xmlns:view="app.view">

    <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false"/>

    <div class="container">
        <div class="row">
            <form class="span12 form-horizontal">
               <ui:SegmentedView visibleIndex="{currentStep}">
                    <view:Wan wan="{configuration.wan}" modes="{configuration.modes}"/>
                    <div class="step2">
                        Test
                    </div>
                </ui:SegmentedView>
                <div>
                    <ui:Button label="Previous" onclick="previous"/>
                    <ui:Button label="Next" onclick="next"/>
                </div>
            </form>
         </div>
    </div>
</app:WizardClass>
