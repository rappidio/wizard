<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field" xmlns:view="app.view">


    <js:Injection>
        <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false"/>
    </js:Injection>

    <div class="container">
        <div class="row">
            <form class="span12 form-horizontal">

                <ui:SegmentedView cid="segmentedView" visibleIndex="{currentStep}">
                    <div class="step1">
                        <fieldset>
                            <legend>{i18n.t('step1.title')}</legend>
                        </fieldset>
                        <view:Wan wan="{{configuration.wan}}"/>
                    </div>

                    <div class="step2">
                        <fieldset>
                            <legend>{i18n.t('step2.title')}</legend>
                        </fieldset>
                        <view:Lan lan="{{configuration.lan}}"/>
                    </div>
                    <div class="step3">Hostname</div>
                    <div class="step4">Summary</div>
                </ui:SegmentedView>

                <div>
                    <ui:Button label="Previous" onclick="previous" visible="{hasPrevious()}"/>
                    <ui:Button label="Next" onclick="next" visible="{hasNext()}"/>
                </div>


            </form>
        </div>
    </div>
</app:WizardClass>