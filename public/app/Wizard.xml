<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field">

    <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false"/>
    <div class="container">
        <div class="row">
            <form class="span12 form-horizontal">

                <ui:SegmentedView cid="segmentedView" visibleIndex="{currentStep}">
                    <div class="step1"><fieldset>
                        <legend>{i18n.t('step1.title')}</legend>
                    </fieldset>

                        <ui:Field label="Model">
                            <select items="{configuration.modes}"
                                    selectedItem="{{configuration.wan}}"
                                    itemKey="mode">
                                <js:Template name="item">
                                    <option>{i18n.ts('wanModes', mode.type)}</option>
                                </js:Template>
                            </select>
                        </ui:Field>
                        <div class="static" visible="{isWanConfigurationActive('static')}">
                            <field:Text value="{{configuration.wan.ipAddress}}" label="{i18n.t('network.ipAddress')}" />
                            <field:Text value="{{configuration.wan.netmask}}" label="{i18n.t('network.netmask')}" />
                            <field:Text value="{{configuration.wan.gateway}}" label="{i18n.t('network.gateway')}" />
                        </div>
                        <div class="pppoe"  visible="{isWanConfigurationActive('pppoe')}">
                            <field:Text value="{{configuration.wan.username}}" label="{i18n.t('network.pppoeUsername')}" />
                            <field:Password value="{{configuration.wan.password}}" label="{i18n.t('network.pppoePassword')}" />
                        </div>
                        <ui:Field label="Mac Address">
                            <ui:RadioGroup value="{{overwriteMacAddress}}">
                                <ui:Radio label="Use Default" value="false" />
                                <ui:Radio label="Overwrite" value="true" />
                            </ui:RadioGroup>
                            <input value="{{configuration.wan.macAddress}}" enabled="{overwriteMacAddress}"/>
                        </ui:Field>
                        <ui:Field label="Dns Server" visible="{not(isWanConfigurationActive('static'))}" >
                            <ui:Checkbox checked="{{configuration.wan.useDhcpDns}}" label="DNS from DHCP" />
                        </ui:Field>
                        <div class="dns_manual"  visible="{not(configuration.wan.useDhcpDns)}">
                            <field:Text value="{{configuration.wan.dnsServer1}}" label="DNS Server 1" />
                            <field:Text value="{{configuration.wan.dnsServer2}}" label="DNS Server 2" />
                            <field:Text value="{{configuration.wan.dnsServer3}}" label="DNS Server 3" />
                        </div></div>
                    <div class="step2">step2</div>
                </ui:SegmentedView>

                <div>
                    <ui:Button label="Previous" onclick="previous" visible="{hasPrevious()}" />
                    <ui:Button label="Next" onclick="next"  visible="{hasNext()}" />
                </div>


            </form>
        </div>
    </div>
</app:WizardClass>