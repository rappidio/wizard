<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui"
                 xmlns:app="app" xmlns:view="app.view">

    <js:Injection>
        <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false"/>
    </js:Injection>

    <div class="container">

        <div class="row">

            <form class="span12 form-horizontal">
                <ui:SegmentedView cid="steps" visibleIndex="{currentStep}">
                    <div class="step1">
                        <fieldset>
                            <legend>{i18n.t('steps.wan')}</legend>
                            <view:Wan wan="{{configuration.wan}}" modes="{configuration.modes}"/>
                        </fieldset>
                    </div>
                    <div class="step2">
                        <fieldset>
                            <legend>{i18n.t('steps.lan')}</legend>

                        </fieldset>
                    </div>
                </ui:SegmentedView>
                <div>
                    <ui:Button label="Previous" onclick="previous()" enabled="{hasPrevious()}"/>
                    <ui:Button label="Next" onclick="next()" enabled="{hasNext()}"/>
                </div>


            </form>

        </div>
    </div>
</app:WizardClass>