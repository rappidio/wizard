<?xml version="1.0"?>
<app:WizardClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field" xmlns:view="app.view">

    <js:Injection>
        <js:I18n cid="i18n" locale="de" path="app/locale" loadMomentJs="false" />
    </js:Injection>

    <div class="container">

        <div class="row">
            <form class="form-horizontal">

                <ui:SegmentedView cid="wizardSteps" visibleIndex="{currentStep}">
                    <div class="step1">
                        Step 1
                    </div>
                    <div class="step2">
                        <view:Wan wan="{{configuration.wan}}" modes="{configuration.modes}" />
                    </div>
                    <div class="step3">
                        Step 3
                    </div>
                    <div class="step4">
                        <view:Time time="{{configuration.time}}" />
                    </div>
                </ui:SegmentedView>
                <div>
                    <ui:Button label="Previous" enabled="{hasPrevious()}" onclick="back()"/>
                    <ui:Button label="Next" enabled="{hasNext()}" onclick="next()"/>
                </div>


            </form>
        </div>

    </div>

</app:WizardClass>
