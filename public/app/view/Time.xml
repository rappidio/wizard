<?xml version="1.0"?>
<view:TimeClass xmlns="http://www.w3.org/1999/xhtml"
               xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:field="js.ui.field" xmlns:view="app.view">

    <field:Text enabled="{not(time.useNtp)}" value="{{time.date}}" label="{i18n.t('fields.date')}"/>
    <field:Text enabled="{not(time.useNtp)}" value="{{time.time}}" label="{i18n.t('fields.time')}"/>

    <ui:Field label="{i18n.t('fields.timeZone')}" value="{time.timeZone}">
        <select items="{timeZones}" selectedItem="{{time.timeZone}}" itemKey="timeZone">
            <js:Template name="item">
                <option value="{timeZone.key}">
                    {timeZone.name}
                </option>
            </js:Template>
        </select>

    </ui:Field>

</view:TimeClass>